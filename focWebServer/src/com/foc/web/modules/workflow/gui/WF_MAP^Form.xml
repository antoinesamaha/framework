<VerticalLayout margin="true" width="100%" spacing="true">
  <ValidationSettings withApply="true" withAttach="true" withPrint="false" />

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="container">
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="NAME" caption="$T{name}" width="180px" />
      <GuiField name="DESCRIP" caption="$T{description}" width="180px" />
      <GuiField name="TITLE_INITIAL_EDIT>NAME" caption="$T{title_of_initial_edit}" width="180px" />
      <GuiField name="STAGE_OF_LOCK_BEGIN>NAME" caption="$T{stage_of_lock_begins}" prompt="keep empty to lock after first signature" width="180px" />
    </HorizontalLayout>
  </VerticalLayout>

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="tableContainer">
    <GuiTable title="Transition Sequence" name="WFSIGNATURE_TABLE" dataPath="WF_SIGNATURE_LIST" inLineEditable="true" pageLength="10" width="100%" height="-1px">
      <TableColumn name="PREVIOUS_STAGE" caption="$T{previous_stage}" />
      <TableColumn name="TARGET_STAGE" caption="$T{target_stage}" />
      <TableColumn name="TITLE_1" caption="$T{title1}" />
      <TableColumn name="TRANSACTION_CONTEXT" caption="$T{transaction_context}" />
      <TableColumn name="TRANSACTION_VIEW" caption="$T{transaction_view}" />
      <TableColumn name="CONDITION_TO_REQUIRE_SIGNATURE" caption="$T{condition}" />
      <TableColumn name="SignCaption" caption="$T{sign_caption}" />
      <TableColumn name="RejectCaption" caption="$T{reject_caption}" />
      <TableColumn name="RejectHidden" caption="$T{reject_hidden}" />
    </GuiTable>
  </VerticalLayout>
  
</VerticalLayout>

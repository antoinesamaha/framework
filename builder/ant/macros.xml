	<macrodef name="jreZip">
		<attribute name="packDir" default="NOT_SET"/>
		<sequential>
			<if>
				<equals arg1="${jre}" arg2="true" />
				<then>
				  <zip destfile="@{packDir}/${jreDirName}.zip" basedir="${jdkRoot}"
				  	includes="jre/**"/>
				</then>
			</if>
		</sequential>
	</macrodef>
	

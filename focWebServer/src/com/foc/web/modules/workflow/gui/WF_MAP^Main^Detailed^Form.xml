<VerticalLayout captionMargin="0" margin="true">
  <ValidationSettings formTitle="" withApply="true" withAttach="false" withPrint="false" />
  <Label value="Workflow Stage Map" style="H2,text-center" width="100%"/>
  <HorizontalLayout captionMargin="0" spacing="true" margin="true">
      <GuiField name="NAME" caption="$T{name}" width="150px" height="-1px" />
      <GuiField name="DESCRIP" caption="$T{description}" width="250px" height="-1px" />
      <GuiField name="TITLE_INITIAL_EDIT>NAME" caption="$T{title_of_initial_edit}" width="250px" height="-1px" />
      <GuiField name="STAGE_OF_LOCK_BEGIN>NAME" caption="$T{stage_of_lock_begins}" width="250px" height="-1px" prompt="keep empty to lock after first signature"/>
  </HorizontalLayout>
  <!-- IncludeXML captionMargin="0" name="WF_SIGNATURE_TABLE_LIST" dataPath="WF_SIGNATURE_LIST" storage="WF_SIGNATURE" type="table" / -->
  
  <GuiTable title="Transition sequence" name="WFSIGNATURE_TABLE" dataPath="DATAROOT" width="100%" height="-1px" inLineEditable="true" >
    <TableColumn name="PREVIOUS_STAGE" caption="$T{previous_stage}" />
    <TableColumn name="TARGET_STAGE" caption="$T{target_stage}" />
    <TableColumn name="FOC_USER" caption="$T{user}" />
    <TableColumn name="TITLE_1" caption="$T{title1}" />
    <TableColumn name="TITLE_2" caption="$T{title2}" />
    <TableColumn name="TITLE_3" caption="$T{title3}" />
    <TableColumn name="TRANSACTION_CONTEXT" caption="$T{transaction_context}" />
    <TableColumn name="TRANSACTION_VIEW" caption="$T{transaction_view}" />
    <TableColumn name="CONDITION_TO_REQUIRE_SIGNATURE" caption="$T{condition}" />
  </GuiTable>
  
</VerticalLayout>
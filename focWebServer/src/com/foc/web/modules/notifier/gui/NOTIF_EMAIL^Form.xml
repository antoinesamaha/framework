<VerticalLayout margin="true" width="100%" spacing="true" captionMargin="0">
    <ValidationSettings formTitle="Email Form" withApply="true" withAttach="false" withPrint="true" withEmail="false" />
    <Label value="E-Mail" style="H2"/>
    <VerticalLayout width="100%" spacing="true" captionMargin="0">
        <GuiField name="TEMPLATE>NAME" caption="$T{template:}" captionPos="left" width="250px" captionStyle="bold,f12"/>
        <GuiField name="SENDER" caption="$T{from:}" captionPos="left" width="400px" captionStyle="bold,f12" editable="true"/>
        <GuiField name="RECIPIENTS" caption="$T{to:}" captionPos="left" width="400px" captionStyle="bold,f12"/>
        <GuiField name="CC" caption="$T{cc:}" captionPos="left" width="400px" captionStyle="bold,f12"/>
        <GuiField name="BCC" caption="B$T{cc:}" captionPos="left" width="400px" captionStyle="bold,f12"/>       
        <GuiField name="SUBJECT" caption="$T{subject:}" captionPos="left" width="400px" captionStyle="bold,f12"/>
        <GuiField name="TEXT" textArea="true" width="100%" height="200px"  />
    </VerticalLayout>
</VerticalLayout>


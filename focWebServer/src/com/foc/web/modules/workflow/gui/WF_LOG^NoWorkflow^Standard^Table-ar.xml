<VerticalLayout height="100%" captionMargin="0">
  <ValidationSettings withApply="true" withAttach="true" withPrint="true" />
  <GuiTable name="LOG_TABLE" dataPath="DATAROOT" width="100%" height="100%" openEnabled="false" addEnabled="false" deleteEnabled="false">
    <OpenForm containerWindow="same window" />
    <TableColumn name="DATE_TIME" caption="$T{the_date}" />
    <TableColumn name="EVENT_TYPE" caption="$T{change_type}" />
    <TableColumn name="USER" caption="$T{the_user}" />
    <TableColumn name="DESCRIP" caption="$T{to_explain}" />
    <TableColumn name="COMMENT" caption="$T{comments}" expandRatio="0.5" />
    <TableColumn name="CHANGES" caption="$T{modifications}" expandRatio="0.5" style="leftToRight" />
    <TableColumn name="EVT_STATUS" caption="$T{the_situation}" width="-1px" />
  </GuiTable>
</VerticalLayout>